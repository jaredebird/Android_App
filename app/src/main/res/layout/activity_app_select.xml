<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jared.stanford.AppSelect">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="149dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="5dp"
        app:layout_constraintHorizontal_bias="0.5">

        <Button
            android:id="@+id/buttonHangman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="startHangman"
            android:text="Hangman"
            app:layout_constraintHorizontal_bias="0.337"
            app:layout_constraintLeft_toLeftOf="@+id/buttonBreakout"
            app:layout_constraintRight_toRightOf="@+id/buttonBreakout"
            tools:layout_editor_absoluteY="79dp" />

        <Button
            android:id="@+id/buttonBreakout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Breakout"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="68dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
